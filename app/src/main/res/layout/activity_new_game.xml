<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newGame.NewGameActivity"
    android:padding="10dp"
    android:background="@color/black">

    <TextView
        android:background="@drawable/text_window"
        android:id="@+id/textViewTitleNewGame"
        android:layout_width="0dp"
        android:paddingLeft="10dp"
        android:paddingVertical="10dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Chọn tên cho nhân vật"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewChronoAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/text_window"
        android:padding="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleNewGame"
        android:src="@drawable/chrono_avatar"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout2"
        android:theme="@style/NewGameInputLayout"
        android:layout_width="400dp"
        android:layout_height="88dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:paddingLeft="150dp"
        android:paddingTop="20dp"
        android:background="@drawable/text_window"
        app:layout_constraintStart_toEndOf="@+id/imageViewChronoAvatar"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitleNewGame">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNameNewGame"
            android:layout_width="127dp"
            android:layout_height="30dp"
            android:background="#9A9A97"
            android:hint="Tên nhân vật"
           />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttonDefaultNewGame"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="Mặc định"
        android:textColor="@color/white"
        android:background="@drawable/text_window"
        app:layout_constraintStart_toEndOf="@+id/imageViewChronoAvatar"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

    <Button
        android:id="@+id/buttonConfirmNewGame"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Xác nhận"
        android:textColor="@color/white"
        android:background="@drawable/text_window"
        app:layout_constraintStart_toEndOf="@+id/buttonDefaultNewGame"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>